<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:background="@drawable/bc"
    tools:context="com.aleksandrp.seeyou.profile.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_bg_green">

            <RelativeLayout
                android:id="@+id/rl_back_profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/small_margin">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_back"
                    android:text="@string/back"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/my_profile"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/midl_size"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                android:id="@+id/iv_user_Profile"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:src="@drawable/user"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/midl_size"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:hint="@string/name"/>

                    <EditText
                        android:id="@+id/et_name_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:fontFamily="ARIMO-BOLD.ttf"
                        android:gravity="center_vertical"
                        android:hint="@string/name"
                        android:textColor="@color/color_text_title"
                        android:textSize="@dimen/x_7"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/midl_size"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:hint="@string/surname"/>

                    <EditText
                        android:id="@+id/et_surname_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:fontFamily="ARIMO-BOLD.ttf"
                        android:gravity="center_vertical"
                        android:hint="@string/surname"
                        android:textColor="@color/color_text_title"
                        android:textSize="@dimen/x_7"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/midl_size"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:hint="@string/email"/>

                    <TextView
                        android:id="@+id/tv_email_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:fontFamily="ARIMO-BOLD.ttf"
                        android:gravity="center_vertical"
                        android:hint="@string/email"
                        android:textColor="@color/color_text_title"
                        android:textSize="@dimen/x_7"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/midl_size"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:hint="@string/date"/>

                    <RelativeLayout
                        android:id="@+id/ll_select_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/midl_size"
                        android:layout_marginTop="@dimen/midl_size"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_date_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/midl_size"
                            android:layout_marginTop="@dimen/midl_size"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:fontFamily="ARIMO-BOLD.ttf"
                            android:gravity="center_vertical"
                            android:hint="@string/select_date"
                            android:textColor="@color/color_text_title"
                            android:textSize="@dimen/x_7"/>

                        <ImageView
                            android:id="@+id/iv_select_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:src="@drawable/down"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/midl_size"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:hint="@string/country"/>

                    <RelativeLayout
                        android:id="@+id/ll_select_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/midl_size"
                        android:layout_marginTop="@dimen/midl_size"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_select_country"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/midl_size"
                            android:layout_marginTop="@dimen/midl_size"
                            android:fontFamily="ARIMO-BOLD.ttf"
                            android:gravity="center_vertical"
                            android:hint="@string/select_country"
                            android:textColor="@color/color_text_title"
                            android:textSize="@dimen/x_7"/>

                        <ImageView
                            android:id="@+id/iv_select_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:src="@drawable/down"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/midl_size"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:hint="@string/city"/>


                    <RelativeLayout
                        android:id="@+id/ll_select_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/midl_size"
                        android:layout_marginTop="@dimen/midl_size"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_select_city"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/midl_size"
                            android:layout_marginTop="@dimen/midl_size"
                            android:fontFamily="ARIMO-BOLD.ttf"
                            android:gravity="center_vertical"
                            android:hint="@string/select_city"
                            android:textColor="@color/color_text_title"
                            android:textSize="@dimen/x_7"/>

                        <ImageView
                            android:id="@+id/iv_select_sity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:src="@drawable/down"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/midl_size"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:hint="@string/sex"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/midl_size"
                        android:layout_marginTop="@dimen/midl_size"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_man"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/midl_size"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="@string/male"/>

                        <CheckBox
                            android:id="@+id/cb_women"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/midl_size"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="@string/female"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/midl_size"
                        android:layout_weight="1"
                        android:background="@drawable/smbbut_normal"
                        android:fontFamily="ARIMO-BOLD.ttf"
                        android:text="@string/edit"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/x_7"/>

                    <Button
                        android:id="@+id/bt_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/midl_size"
                        android:layout_weight="1"
                        android:background="@drawable/smbbut_normal"
                        android:fontFamily="ARIMO-BOLD.ttf"
                        android:text="@string/cancel"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/x_7"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>
