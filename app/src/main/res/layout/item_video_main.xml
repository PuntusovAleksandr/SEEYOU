<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_main"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/video_view_entity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/midl_size"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="@dimen/midl_size"
            android:layout_marginRight="@dimen/midl_size"
            android:layout_marginTop="@dimen/midl_size"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tile_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="?attr/actionBarSize"
                android:fontFamily="ARIMO-BOLD.ttf"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="789"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x_4"/>

            <ImageView
                android:id="@+id/iv_settings_in_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_bcl"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/big_size"/>

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_view_normal"
                android:fontFamily="ARIMO-BOLD.ttf"
                android:text="author"
                android:textColor="@color/color_bg_green"
                android:textSize="@dimen/x_4"/>


            <ImageView
                android:id="@+id/iv_view_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/com_facebook_auth_dialog_corner_radius_oversized"
                android:layout_marginRight="@dimen/small_margin"
                android:src="@drawable/view_normal"/>

            <TextView
                android:id="@+id/tv_duration_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/iv_view_normal"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:fontFamily="ARIMO-BOLD.ttf"
                android:text="00:00"
                android:textColor="@color/color_bg_green"
                android:textSize="@dimen/x_4"/>


            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginLeft="@dimen/midl_size"
                android:layout_toRightOf="@+id/tv_duration_video"
                android:fontFamily="ARIMO-BOLD.ttf"
                android:text="Author"
                android:textColor="@color/color_bg_green"
                android:textSize="@dimen/x_4"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
