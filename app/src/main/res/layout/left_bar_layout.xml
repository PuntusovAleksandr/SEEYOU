<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_weight="1.5"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_main_left_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_green"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_live_chanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/midl_size"
                    android:text="@string/live_chanels"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/midle_size_text"/>

                <View
                    android:id="@+id/view_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/com_facebook_likeview_edge_padding"
                    android:layout_below="@+id/tv_live_chanel"
                    android:background="@color/light_green"/>


                <ListView
                    android:id="@+id/list_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view_button"
                    android:layout_below="@+id/view_top"/>


                <View
                    android:id="@+id/view_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/com_facebook_likeview_edge_padding"
                    android:layout_above="@+id/tv_your_liked_videos"
                    android:background="@color/light_green"/>


                <TextView
                    android:id="@+id/tv_your_liked_videos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/midl_size"
                    android:text="@string/your_liked_videos"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/midle_size_text"/>


            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_left_baar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>