<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_profile_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:visibility="gone"
    tools:context="com.aleksandrp.seeyou.main.MainActivity">


    <LinearLayout
        android:id="@+id/ll_main_profile_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="@color/transparent_green"/>

        <RelativeLayout
            android:id="@+id/rl_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_green"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/midl_size"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/midl_size"
                    android:gravity="center_vertical|start"
                    android:text="@string/user_name"
                    android:textColor="@color/color_bg_green"/>

                <RelativeLayout
                    android:id="@+id/rl_insaider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/midl_size"
                    android:layout_marginTop="@dimen/midl_size">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/midl_size"
                        android:paddingTop="@dimen/midl_size"
                        android:text="@string/insaider"/>

                    <Switch
                        android:id="@+id/switch_insaider"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@color/cardview_dark_background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/midl_size"
                        android:layout_marginTop="@dimen/midl_size">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:paddingBottom="@dimen/midl_size"
                            android:paddingTop="@dimen/midl_size"
                            android:text="@string/message"/>

                        <TextView
                            android:id="@+id/tv_message"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:background="@drawable/button_signin_bg"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/white"/>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/et_my_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:paddingBottom="@dimen/midl_size"
                        android:paddingTop="@dimen/midl_size"
                        android:text="@string/my_profile"/>

                    <!--<TextView-->
                        <!--android:id="@+id/et_settings"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="center_vertical|start"-->
                        <!--android:paddingBottom="@dimen/midl_size"-->
                        <!--android:paddingTop="@dimen/midl_size"-->
                        <!--android:text="Settings"/>-->

                    <TextView
                        android:id="@+id/et_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:paddingBottom="@dimen/midl_size"
                        android:paddingTop="@dimen/midl_size"
                        android:text="@string/about_seeyou"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/et_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical|start"
                    android:paddingBottom="@dimen/midl_size"
                    android:paddingTop="@dimen/midl_size"
                    android:text="@string/sign_out"/>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
